files:
  "/etc/nginx/conf.d/proxy_custom_headers.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Forward important headers to the Spring Boot app
      proxy_set_header Authorization $http_authorization;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;

      # Add CORS headers at Nginx level
      add_header 'Access-Control-Allow-Origin' 'http://arblog-angular-app.s3-website.us-east-2.amazonaws.com' always;
      add_header 'Access-Control-Allow-Credentials' 'true' always;
      add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, PATCH, DELETE, OPTIONS' always;
      add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-Requested-With' always;

      # Handle preflight requests directly
      if ($request_method = OPTIONS) {
          add_header 'Access-Control-Allow-Origin' 'http://arblog-angular-app.s3-website.us-east-2.amazonaws.com' always;
          add_header 'Access-Control-Allow-Credentials' 'true' always;
          add_header 'Access-Control-Allow-Methods' 'GET, POST, PUT, PATCH, DELETE, OPTIONS' always;
          add_header 'Access-Control-Allow-Headers' 'Authorization, Content-Type, X-Requested-With' always;
          return 204;
      }

container_commands:
  reload_nginx:
    command: "service nginx reload"
